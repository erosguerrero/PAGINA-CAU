<div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="profileModalLabel">Perfil de usuario</h5>
          <button type="button" class="btn-close close" data-dismiss="modal" aria-label="Close">
          </button>
        </div>
        <div class="modal-body">
          <div class="d-flex flex-column align-items-center text-left">
            <img class="userimg" src="/imagen/<%= respuesta.userEmail %>" alt="userProfile">
            <div class="mt-3">
              <h4 class="text-primary">Nombre: <%= respuesta.userName %></h4>
              <p class="text-secondary">Perfil: <%= respuesta.userProfile %></p>
              <p class="text-secondary">Email: <%= respuesta.userEmail %></p>
              <p class="text-secondary">Fecha: <%= respuesta.fecha +" "+ respuesta.hora %></p>
              <p class="text-secondary">Contrase√±a: <%= "*".repeat(respuesta.password) %></p>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
              <h6 class="mb-0">Avisos realizados: </h6>
              <span class="text-secondary"><%=respuesta.counts[0]['I'] + respuesta.counts[0]['S'] + respuesta.counts[0]['F']  %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
              <h6 class="mb-0">Incidencias: </h6>
              <span class="text-secondary"><%=respuesta.counts[0]['I'] %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
              <h6 class="mb-0">Sugerencias: </h6>
              <span class="text-secondary"><%=respuesta.counts[0]['S'] %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
              <h6 class="mb-0">Felicitaciones: </h6>
              <span class="text-secondary"><%=respuesta.counts[0]['F'] %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  